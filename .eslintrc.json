{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "warn",
    "default-case": "error",
    "no-duplicate-imports": "error",
    "no-unused-expressions": "error",
    "no-multi-spaces": "error",
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
