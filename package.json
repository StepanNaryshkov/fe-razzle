{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env BUNDLE_ANALYZE=true razzle build",
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jest-environment-jsdom-sixteen",
    "coverage": "npm run test -- --coverage --no-cache",
    "start:prod": "cross-env NODE_ENV=production node build/server.js",
    "lint": "./node_modules/.bin/eslint src"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "crypto-js": "^4.0.0",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "node-sass": "^4.13.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.5",
    "redux-logger": "^4.0.0",
    "redux-saga": "^1.1.3",
    "serialize-javascript": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.12.1",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.6.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express": "^4.17.1",
    "history": "^4.10.1",
    "husky": "^5.0.6",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "razzle": "^3.3.8",
    "razzle-plugin-bundle-analyzer": "^1.2.0",
    "razzle-plugin-scss": "^3.3.8",
    "react-test-renderer": "^17.0.1",
    "redux-mock-store": "^1.5.4",
    "redux-saga-test-plan": "^4.0.1"
  },
  "eslintConfig": {
    "extends": ["react-app", "plugin:prettier/recommended"]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": ["eslint --quiet --fix", "git add"],
    "src/**/*.{css,scss,md}": ["prettier --write", "git add"]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "server/**/*.js",
      "!src/server.js",
      "!src/axios.config.js",
      "!src/constants/**/*.js",
      "!src/index.js",
      "!src/client.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,mjs}",
      "<rootDir>/server/**/*.{spec,test}.{js,mjs}"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
